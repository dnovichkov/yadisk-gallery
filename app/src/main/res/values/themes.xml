<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme for the app -->
    <style name="Theme.YaDiskGallery" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Splash Screen theme -->
    <style name="Theme.YaDiskGallery.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.YaDiskGallery</item>
    </style>
</resources>
